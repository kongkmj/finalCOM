<script>

var tempChart = {
  type: 'line',
  data: {
  labels: [
    {{#each Rdata}}
      "{{this.time}}",
    {{/each}}
  ],
  datasets: [{
    label: "온도",
    backgroundColor: "rgba(38, 185, 154, 0.31)",
    borderColor: "rgba(38, 185, 154, 0.7)",
    pointBorderColor: "rgba(38, 185, 154, 0.7)",
    pointBackgroundColor: "rgba(38, 185, 154, 0.7)",
    pointHoverBackgroundColor: "#fff",
    pointHoverBorderColor: "rgba(220,220,220,1)",
    pointBorderWidth: 1,
    data: [
      {{#each Rdata}}
        {{this.temp}},
      {{/each}}
    ]
  }]
  },
  options:{
    responsive:true,
    scales:{
      yAxes:[{
        ticks:{
          suggestedMax:30,
          beginAtZero:true
        },
        display:true
      }]
    }
  }
};

var humiChart = {
  type: 'line',
  data: {
  labels: [
    {{#each Rdata}}
      "{{this.time}}",
    {{/each}}
  ],
  datasets: [{
    label: "습도",
    backgroundColor: "rgba(38, 185, 154, 0.31)",
    borderColor: "rgba(38, 185, 154, 0.7)",
    pointBorderColor: "rgba(38, 185, 154, 0.7)",
    pointBackgroundColor: "rgba(38, 185, 154, 0.7)",
    pointHoverBackgroundColor: "#fff",
    pointHoverBorderColor: "rgba(220,220,220,1)",
    pointBorderWidth: 1,
    data: [
      {{#each Rdata}}
        {{this.humi}},
      {{/each}}
    ]
  }]
  },
  options:{
    responsive:true,
    scales:{
      yAxes:[{
        ticks:{
          suggestedMax:100,
          suggestedMin:0
